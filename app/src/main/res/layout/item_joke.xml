<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_height="200dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ndroid="http://schemas.android.com/tools">

    <ImageView
        android:background="@color/black"
        android:id="@+id/joke_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/chuck_sample"
        android:scaleType="centerCrop"/>

    <TextView
        style="@android:style/TextAppearance.Small"
        android:background="@color/trasparent_black"
        android:id="@+id/joke_text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_height="72dp"
        android:layout_width="match_parent"
        android:padding="16dp"
        ndroid:ellipsize="end"
        android:maxLines="2"
        android:text="Pluto is actually an orbiting group of British soldiers from the American Revolution who entered space after the Chuck gave them a roundhouse kick to the face."
        android:textColor="@color/white"
        android:textSize="14sp"/>

</RelativeLayout>

